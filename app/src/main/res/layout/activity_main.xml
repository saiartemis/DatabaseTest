<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_id"
        android:layout_alignEnd="@+id/query_button"
        android:text="ID:"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/query_button"
        android:layout_marginTop="104dp"
        android:text="name："
        android:textSize="30sp" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/del_button"
        android:layout_marginEnd="14dp"
        android:text="添加" />

    <Button
        android:id="@+id/del_button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/modify_button"
        android:layout_marginEnd="97dp"
        android:text="删除" />

    <Button
        android:id="@+id/modify_button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/query_button"
        android:layout_marginStart="118dp"
        android:text="修改" />

    <Button
        android:id="@+id/query_button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"


        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="195dp"
        android:layout_marginStart="20dp"
        android:text="查询" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:ems="10"
        android:hint="请输入name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText_name"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="请输入ID"
        android:inputType="textPersonName" />
</RelativeLayout>
